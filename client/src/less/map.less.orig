@media only screen and (max-device-width : 680px) {
  .ol-popup {
    position: fixed;
    background: white;
    top: 7px;
    left: 7px;
    right: 7px;
    max-height: 364px;
    z-index: 1000;
    #popup-content {
      max-height: inherit;
      height: 100%;
      overflow: auto;
      #popup-content-text {
        max-height: 300px;
      }
      img {
        width: 100%;
      }
    }
  }
  .ol-popup:before,
  .ol-popup:after {
    border: none;
  }
}
